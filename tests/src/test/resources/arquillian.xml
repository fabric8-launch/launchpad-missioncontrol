<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <container qualifier="chameleon" default="true">
    <configuration>
      <property name="chameleonTarget">wildfly:10.0.0.Final:${runmode}</property>
      <property name="serverConfig">standalone.xml</property>
    </configuration>
  </container>

  <extension qualifier="webdriver">
    <property name="browser">${browser}</property>
    <!-- Assumes the chromedriver binary has been placed into /Applications/Google Chrome.app/ -->
    <property name="chromeDriverBinary">/Applications/Google Chrome.app/chromedriver</property>
  </extension>
</arquillian>
